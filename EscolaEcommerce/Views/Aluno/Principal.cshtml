@model IEnumerable<EscolaEcommerce.Models.Aluno>

<p>
    <a asp-controller="Aluno" asp-action="CadastrarAluno" class="btn btn-primary">Cadastrar Aluno</a>
</p>
@if (TempData["Mensagem"] != null)
{
    <div class="@TempData["Classe"]">@TempData["Mensagem"]</div>
}
<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th class="text-center">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td class="text-center">
                    <a asp-controller="Aluno" asp-action="EditarAluno" asp-route-id="@item.Rm" class="btn btn-sm btn-warning">Editar</a>
                    <span>|</span>
                    <a asp-controller="Aluno" asp-action="ExcluirAluno" asp-route-id="@item.Rm"
                       onclick="return confirm('Deseja realmente Excluir este item?');" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>